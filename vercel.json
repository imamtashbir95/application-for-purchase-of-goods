{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.1"
        }
    },
    "routes": [
        {   
            "src": "/build/(.*)",
            "dest": "/public/build/"
        },
        {
            "src": "/app/(.*)",
            "dest": "/app/"
        },
        {
            "src": "/bootstrap/(.*)",
            "dest": "/bootstrap/"
        },
        {
            "src": "/config/(.*)",
            "dest": "/config/"
        },

        {
            "src": "/resources/(.*)",
            "dest": "/resources/"
        },
        {
            "src": "/routes/(.*)",
            "dest": "/routes/"
        },
        {
            "src": "/storage/(.*)",
            "dest": "/storage/"
        },
        {
            "src": "/img/(.*)",
            "dest": "/img/"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://application-for-purchase-of-goods.vercel.app",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "SESSION_DRIVER": "cookie",
        "LOG_CHANNEL": "stderr",
        "PHP_VERSION": "8.0"
    },
    "outputDirectory": "public"
}